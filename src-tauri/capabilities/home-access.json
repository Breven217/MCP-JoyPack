{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "home-access",
  "description": "Capability for accessing files in the home directory",
  "windows": [
    "main"
  ],
  "permissions": [
    "fs:default",
    "fs:allow-exists",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-remove",
    "shell:allow-execute",
    "shell:allow-spawn",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/.codeium/windsurf/**" },
        { "path": "$HOME/repos/MCP-JoyPack/**" },
        { "path": "$HOME/.mcp/**" }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "git-clone",
          "cmd": "git",
          "args": [
            "clone",
            {
              "validator": "\\S+"
            },
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "git-pull-origin",
          "cmd": "git",
          "args": [
            "-C",
            {
              "validator": "\\S+" 
            },
            "pull",
            "origin"
          ]
        },
        {
          "name": "npm-install",
          "cmd": "npm",
          "args": [
            "--prefix",
            {
              "validator": "\\S+"
            },
            "install"
          ]
        },
        {
          "name": "npm-build",
          "cmd": "npm",
          "args": [
            "--prefix",
            {
              "validator": "\\S+"
            },
            "run",
            "build"
          ]
        },
        {
          "name": "chmod",
          "cmd": "chmod",
          "args": [
            "+x",
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "which",
          "cmd": "which",
          "args": [
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "brew",
          "cmd": "brew",
          "args": [
            {
              "validator": "\\S+"
            },
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "refresh-terminal",
          "cmd": "sh",
          "args": [
            "-c",
            "$SHELL"
          ]
        },
        {
          "name": "run-update",
          "cmd": "bash",
          "args": [
            "$HOME/.mcp/update.sh"
          ]
        },
        {
          "name": "uv-sync",
          "cmd": "uv",
          "args": [
            "--prefix",
            {
              "validator": "\\S+"
            },
            "sync"
          ]
        },
        {
          "name": "uv-tool-install",
          "cmd": "uv",
          "args": [
            "tool",
            "install",
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "vault-sync-env",
          "cmd": "sh",
          "args": [
            "-c",
            "source ~/repos/setup/helpers.sh && vault sync-env shared-product-development/dev_exports"
          ]
        }
      ]
    }
  ]
}
